<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment"
    tools:layout_editor_absoluteX="-208dp"
    tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button6"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="7dp"

            android:layout_marginRight="50dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="#F3F16D"
            android:backgroundTintMode="src_in"
            android:gravity="center"
            android:onClick="order_list"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:rotation="-7"
            android:rotationY="10"
            android:text="Order List"
            android:textColor="#000000"
            android:textColorHighlight="#00FFFFFF"
            android:textColorHint="#00FFFFFF"
            android:textColorLink="#00FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            app:icon="@drawable/order_list"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button11"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="#63FFCE"
            android:foregroundTint="#4DFFFFFF"
            android:onClick="customer_details"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:rotation="7"
            android:rotationY="-10"
            android:text="Customer Details"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            app:icon="@drawable/customer_details"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button10"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="#F3F16D"
            android:foregroundTint="#4DFFFFFF"
            android:onClick="avaliable_stock"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:rotation="-7"
            android:rotationY="10"
            android:text="Avaliable Stock"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            app:icon="@drawable/avaliable_stock"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button9"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="#63FFCE"
            android:foregroundTint="#4DFFFFFF"
            android:onClick="payment_details"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:rotation="7"
            android:rotationY="-10"
            android:text="Payment Details"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            app:icon="@drawable/payment_details"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:iconTint="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
